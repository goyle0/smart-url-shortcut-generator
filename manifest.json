{
  "manifest_version": 3,
  "name": "Smart URL Shortcut Generator",
  "version": "1.0.0",
  "description": "検索しやすいファイル名で.urlショートカットを自動生成・ダウンロード",
  
  "permissions": [
    "activeTab",
    "downloads",
    "storage",
    "scripting",
    "notifications",
    "contextMenus"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Smart URL Shortcut Generator"
  },
  
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  
  "host_permissions": [
    "<all_urls>"
  ]
}